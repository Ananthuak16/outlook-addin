<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:type="TaskPaneApp">
  <Id>your-unique-id-here</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name or Company</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Your Add-in Name</DisplayName>
  <Description>Your Add-in Description</Description>
  <IconUrl DefaultValue="https://yourdomain.com/icon.png"/>
  <SupportUrl DefaultValue="https://yourdomain.com/support"/>
  <AppDomains>
    <AppDomain>YourDomain.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/index.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/index.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
</OfficeApp>
